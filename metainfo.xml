<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>JUPYTER</name>
            <displayName>Jupyter</displayName>
            <comment>Jupyter (IPython3)</comment>
            <version>0.2.0</version>
            <components>
                <component>
                  <name>JUPYTER_MASTER</name>
                  <displayName>Jupyter (IPython3) Server</displayName>
                  <category>MASTER</category>
                  <cardinality>1+</cardinality>
                  <co-locate>JUPYTER/PYTHON27_CLIENT</co-locate>
                  <co-locate>SPARK/SPARK_CLIENT</co-locate>
                  <commandScript>
                    <script>scripts/master.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>5000</timeout>
                  </commandScript>
                </component>
                <component>
                  <name>PYTHON27_CLIENT</name>
                  <displayName>Python2.7</displayName>
                  <category>CLIENT</category>
                  <cardinality>1+</cardinality>
                  <commandScript>
                    <script>scripts/client.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>5000</timeout>
                  </commandScript>
                </component>
            </components>
            <osSpecifics>
              <osSpecific>
                <osFamily>redhat6</osFamily>
                <packages>
                  <package><name>gcc</name></package>
                  <package><name>gcc-c++</name></package>
                  <package><name>gcc-gfortran</name></package>
                  <package><name>zlib-devel</name></package>
                  <package><name>bzip2-devel</name></package>
                  <package><name>openssl-devel</name></package>
                  <package><name>xz-libs</name></package>
                  <package><name>sqlite-devel</name></package>
                  <package><name>lrzsz</name></package>
                  <package><name>freetype-devel</name></package>
                  <package><name>libpng-devel</name></package>
                  <package><name>cairo-devel</name></package>
                  <package><name>libXt-devel</name></package>
                  <package><name>libxslt-devel</name></package>
                  <package><name>boost-devel</name></package>
                  <package><name>libcurl</name></package>
                  <package><name>libcurl-devel</name></package>
                  <package><name>lapack-devel</name></package>
                  <package><name>blas</name></package>
                  <package><name>blas-devel</name></package>
                  <package><name>zeromq3-devel</name></package>
                  <package><name>python-devel</name></package>
                  <package><name>make</name></package>
                  <package><name>pandoc</name></package>
                  <package><name>pandoc-citeproc</name></package>
                  <package><name>readline-devel</name></package>
                  <package><name>java-1.7.0-openjdk-devel</name></package>
                </packages>
              </osSpecific>
            </osSpecifics>
            <configuration-dependencies>
              <config-type>jupyter-config</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>
